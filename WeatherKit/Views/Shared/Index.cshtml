@{ ViewData["Title"] = "Home"; }

<div>
    <h1 class="display-4">Welcome to Weatherkit</h1>
    <br />
    <form asp-controller="Home" asp-action="GetWeatherDetails" method="get" class="jumbotron bg-light align-items-center text-center mx-auto" style="width:366px">
        <span>
            <label for="city" style="margin-right: 110px; font-weight: 600;">Select City:</label><br />
            <input id="cityInput" list="city" name="citySelected" type="text" placeholder="Search by city name">
        </span>
        <datalist id="city">
        </datalist>
        <br />
        <br />
        <p style="font-size: medium; color: blue;"> or </p>
        <span>
            <label for="city" style="margin-right: 80px; font-weight: 600;">Enter Zip Code:</label><br />
            <input type="text" name="zipCode" placeholder="5 digits only">
        </span>
        <br />
        <label style="font-size: small; color: red;">@ViewBag.InvalidMsg</label>
        <br />
        <input class="bg-primary text-white btn" id="submit" type="submit" value="Submit" />
    </form>
</div>