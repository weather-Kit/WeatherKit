@model WeatherKit.Models.LocationInput

@{ ViewData["Title"] = "Home Page"; }

<div class="text-center">
    <h1 class="display-4">Welcome to Weatherkit</h1>
    <form asp-controller="Home" asp-action="GetWeatherDetails" method="get">
        <input type="text" name="cityState" placeholder="City, State"><br />
        <p> or </p>
        <input type="text" name="zipCode" placeholder="Zip Code"><br />
        <input id="submit" type="submit" value="Submit" />
    </form>
</div>